@model AgricultureManagementSystem.Models.Note

@{
    ViewData["Title"] = "Usuń notatkę";
}

<h1>Usuń</h1>

<h3>
    Jesteś pewien że chcesz usunąć poniższy element?<br />
    Podanej czynności nie można cofnąć
</h3>
<div>
    <h4>Notatka</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10 multiline-text">@Html.DisplayFor(model => model.Content)</dd>
    </dl>

    <form asp-action="DeletePost">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-outline-danger" />
        <a class="btn btn-dark" asp-action="Index">Anuluj</a>
    </form>
</div>
