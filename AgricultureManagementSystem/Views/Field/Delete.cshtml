@model AgricultureManagementSystem.Models.Field

@{
    ViewData["Title"] = "Usuń pole";
}

<h1>Usuń</h1>

<h3>
    Jesteś pewien że chcesz usunąć poniższy element?<br />
    Podanej czynności nie można cofnąć
</h3>
<div>
    <h4>Pole</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Area)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Area)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GroundClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GroundClass)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FieldCrop)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FieldCrop)
        </dd>
    </dl>

    <form asp-action="DeletePost">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-outline-danger" />
        <a class="btn btn-dark" asp-action="Details" asp-route-id="@Model.Id">Anuluj</a>
    </form>
</div>
