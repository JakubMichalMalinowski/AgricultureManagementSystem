@model AgricultureManagementSystem.Models.Service

@{
    ViewData["Title"] = "Usuń serwis";
}

<h1>Usuń</h1>

<h3>
    Jesteś pewien że chcesz usunąć poniższy element?<br />
    Podanej czynności nie można cofnąć
</h3>
<div>
    <h4>Czynność serwisową</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceDescription)
        </dd>
    </dl>
    
    <form asp-action="DeletePost">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="equipmentId"
               value="@Context.Request.Query["equipmentId"]" />
        <input type="hidden" name="equipmentType"
               value="@Context.Request.Query["equipmentType"]" />

        <input type="submit" value="Usuń" class="btn btn-outline-danger" />
        <a class="btn btn-dark"
           asp-controller="@Context.Request.Query["equipmentType"]"
           asp-action="Details"
           asp-route-id="@Context.Request.Query["equipmentId"]"
           asp-fragment="service-partial">Anuluj</a>
    </form>
</div>
