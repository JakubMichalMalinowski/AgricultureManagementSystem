@model AgricultureManagementSystem.Models.Header

@{
    ViewData["Title"] = "Edytuj przystawkę";
}

<h1>Edytuj</h1>

<h4>Przystawkę</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditHeader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionYear" class="control-label"></label>
                <input asp-for="ProductionYear" class="form-control" />
                <span asp-validation-for="ProductionYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeaderType" class="control-label"></label>
                <select asp-items="Html.GetEnumSelectList<HeaderType>()" asp-for="HeaderType" class="form-control"></select>
                <span asp-validation-for="HeaderType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Width" class="control-label"></label>
                <input asp-for="Width" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="combineId"
                   value="@Context.Request.Query["combineId"]" />
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Details" asp-route-id="@Context.Request.Query["combineId"]" >Anuluj</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
