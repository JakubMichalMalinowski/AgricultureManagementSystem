@model AgricultureManagementSystem.Models.Header

@{
    ViewData["Title"] = "Usuń przystawkę";
}

<h1>Usuń</h1>

<h3>
    Jesteś pewien że chcesz usunąć poniższy element?<br />
    Podanej czynności nie można cofnąć
</h3>
<div>
    <h4>Przystawka</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductionYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductionYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeaderType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeaderType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Width)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Width)
        </dd>
    </dl>

    <form asp-action="DeleteHeaderPost">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="combineId"
               value="@Context.Request.Query["combineId"]" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a class="btn btn-dark" asp-action="Details" asp-route-id="@Context.Request.Query["combineId"]" >Anuluj</a>
    </form>
</div>
