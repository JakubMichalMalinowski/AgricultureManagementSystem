@model AgricultureManagementSystem.Models.Combine

@{
    ViewData["Title"] = "Szczegóły kombajnu";
}

<h1>Szczegóły</h1>

@{
    var routeParams = new Dictionary<string, string>
{
        { "combineId", Model.Id.ToString() }
    };
}

<div>
    <div class="d-flex flex-column flex-lg-row">
        <div class="w-75">
            <h4>Kombajn</h4>
        </div>
        <div class="w-50">
            <div class="d-flex justify-content-between">
                <h4>Przystawki</h4>
                <a class="btn btn-primary" asp-action="CreateHeader"
                   asp-all-route-data="routeParams">Dodaj przystawkę</a>
            </div>
        </div>
    </div>
    <hr />
    <div class="d-flex flex-column flex-lg-row">
        <div class="w-75">
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Model)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Model)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.ProductionYear)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.ProductionYear)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.NumberOfStrawWalkers)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.NumberOfStrawWalkers)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Course)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Course)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Power)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Power)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.FuelType)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.FuelType)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.FuelCapacity)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.FuelCapacity)
                </dd>
            </dl>
        </div>
        <div class="w-50">
            @if (Model.Headers.Count > 0)
            {
                for (int i = 0; i < Model.Headers.Count; i++)
                {
                    Header header = Model.Headers[i];
                    if (i > 0)
                    {
                        <hr />
                    }
                    <dl class="row mb-lg-4">
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(modelItem => header.Brand)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(modelItem => header.Brand)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(modelItem => header.Model)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(modelItem => header.Model)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(modelItem => header.ProductionYear)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(modelItem => header.ProductionYear)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(modelItem => header.HeaderType)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(modelItem => header.HeaderType)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(modelItem => header.Width)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(modelItem => header.Width)
                        </dd>
                    </dl>
                    <div>
                        <a asp-action="EditHeader" asp-all-route-data="routeParams" asp-route-id="@header.Id">Edytuj</a> |
                        <a asp-action="DeleteHeader" asp-route-id="@header.Id">Usuń</a>
                    </div>
                }
            }
            else
            {
                <p>Brak elementów do wyświetlenia, kliknj przycisk dodaj przystawkę, aby dodać pierwszy element.</p>
            }
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a> |
    <a asp-action="Index">Wróć do listy</a>
</div>
